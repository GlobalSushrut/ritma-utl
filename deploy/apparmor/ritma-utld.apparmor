#include <tunables/global>

profile ritma-utld /usr/local/bin/utld flags=(attach_disconnected,mediate_deleted) {
  #include <abstractions/base>
  #include <abstractions/nameservice>

  capability,
  network,

  /usr/local/bin/utld mr,

  /run/ritma/** rw,
  /var/lib/ritma/** rw,
  /etc/ssl/** r,

  deny /etc/shadow r,
}
