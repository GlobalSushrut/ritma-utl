FROM rust:1.88 AS builder
WORKDIR /app
COPY . .
RUN cargo build -p bar_daemon --release

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/bar_daemon /usr/local/bin/bar_daemon
ENV BAR_SOCKET=/var/lib/ritma/bar_daemon.sock
ENV BAR_AGENT_MODE=noop
ENV RUST_LOG=info
VOLUME ["/var/lib/ritma"]
ENTRYPOINT ["/usr/local/bin/bar_daemon"]
